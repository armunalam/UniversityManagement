<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--tree view of the student model-->
    <record id="student_tree" model="ir.ui.view">
        <field name="name">uni.student.tree</field>
        <field name="model">uni.student</field>
        <field name="arch" type="xml">
            <tree string="Student">
                <field name="name"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="department"/>
            </tree>
        </field>
    </record>

    <!--form view of the student model-->
    <record id="student_form" model="ir.ui.view">
        <field name="name">uni.student.form</field>
        <field name="model">uni.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    Student
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">

                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="student_id" placeholder="Student ID"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <!--<field name="name"/>-->
                            <field name="gender"/>
                            <field name="email"/>
                            <field name="department"/>
                        </group>
                        <!--<group>-->

                        <!--</group>-->
                    </group>

                </sheet>

            </form>
        </field>
    </record>


    <!--action of the Student menu-->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">uni.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter student information
            </p>
        </field>
    </record>

    <menuitem id="uni_student_menu" name="Student" action="action_student" sequence="10"/>


</odoo>
